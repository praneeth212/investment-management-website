@model Managament.Models.MutualFundDetailsViewModel

@{
    ViewData["Title"] = "Mutual Fund Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Mutual Fund Details</h2>

    <div class="card shadow-sm mx-auto w-75">
        <div class="card-header text-black" style="background-color: #84c140;">
            <h4 class="mb-0">@Model.MutualFund.Name</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.MutualFund.Name</dd>

                <dt class="col-sm-4">Type</dt>
                <dd class="col-sm-8">@Model.MutualFund.Type</dd>

                <dt class="col-sm-4">Risk</dt>
                <dd class="col-sm-8">@Model.MutualFund.Risk</dd>

                <dt class="col-sm-4">Minimum Investment</dt>
                <dd class="col-sm-8">@Model.MutualFund.MinimumInvestment</dd>

                <dt class="col-sm-4">Exit Load</dt>
                <dd class="col-sm-8">@Model.MutualFund.ExitLoad%</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.MutualFund.Description</dd>

                <dt class="col-sm-4">Current NAV</dt>
                <dd class="col-sm-8">@Model.LatestNav</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-controller="MutualFunds" asp-action="Index" class="btn-login" style="text-decoration: none;">
                <svg style="margin-right: 0.4rem; text-decoration: none;" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                </svg> Back to List
            </a>
            <a asp-controller="Investments" asp-action="Create" asp-route-mutualFundId="@Model.MutualFund.MutualFundId" style="text-decoration: none;" class="btn-create-account">
                <svg style="margin-right: 0.4rem;" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cash-coin" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8m5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0" />
                    <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195z" />
                    <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083q.088-.517.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1z" />
                    <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 6 6 0 0 1 3.13-1.567" />
                </svg> Make Investment
            </a>
        </div>
    </div>
</div>